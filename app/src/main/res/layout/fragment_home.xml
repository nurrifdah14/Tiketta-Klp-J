<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Background"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_home_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Hai Rifdah,"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_kemana"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Mau Kemana Kamu Hari Ini?"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_home_greeting" />

    <ImageView
        android:id="@+id/kapal"
        android:layout_width="258dp"
        android:layout_height="126dp"
        android:scaleType="fitXY"
        android:src="@drawable/kapal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kapal"
        android:layout_marginTop="19dp"
        android:background="@drawable/ic_rectangle_156"


        >
        <TextView
            android:id="@+id/jadwal_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Penyebrangan Hari Ini"
            android:textColor="@color/Background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Penyebrangan Hari Ini"
            android:textColor="@color/Background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tabeljadwal_home"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@drawable/tabelhome"
            app:layout_constraintTop_toBottomOf="@id/jadwal_home"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="16dp"
            >

            <TextView
                android:id="@+id/rute_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Pamatata-Bira"
                android:textColor="@color/Yellow"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/trip1_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rute_home"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Trip Pertama"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/trip2_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/trip1_home"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Trip Kedua"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"
                />

            <TextView
                android:id="@+id/trip1_jam_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rute_home"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="07.00 WITA"
                android:textColor="@color/Background"
                android:textSize="12sp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:id="@+id/trip2_jam_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/trip1_home"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="13.00 WITA"
                android:textColor="@color/Background"
                android:textSize="12sp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/selengkapnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tabeljadwal_home"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Lihat Selengkapnya..."
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artikel Terkait"
            android:textColor="@color/Background"
            app:layout_constraintTop_toBottomOf="@id/tabeljadwal_home"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="166dp"
            android:layout_height="131dp"
            app:layout_constraintTop_toBottomOf="@id/artikel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@drawable/artikel1"
                    android:scaleType="fitCenter"
                    android:id="@+id/iv1"
                    />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantai Baloiyah, Selayar ...."
                    android:textSize="9sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv1"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kabarrantau.com"
                    android:textSize="7sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/title1"
                    android:layout_marginTop="2dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/artikel2"
            android:layout_width="166dp"
            android:layout_height="131dp"
            app:layout_constraintTop_toBottomOf="@id/artikel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@drawable/artikel1"
                    android:scaleType="fitCenter"
                    android:id="@+id/iv2"
                    />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantai Baloiyah, Selayar ...."
                    android:textSize="9sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv2"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kabarrantau.com"
                    android:textSize="7sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/title2"
                    android:layout_marginTop="2dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="166dp"
            android:layout_height="131dp"
            app:layout_constraintTop_toBottomOf="@id/artikel2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@drawable/artikel1"
                    android:scaleType="fitCenter"
                    android:id="@+id/iv3"
                    />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantai Baloiyah, Selayar ...."
                    android:textSize="9sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv3"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kabarrantau.com"
                    android:textSize="7sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/title3"
                    android:layout_marginTop="2dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="166dp"
            android:layout_height="131dp"
            app:layout_constraintTop_toBottomOf="@id/artikel2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:src="@drawable/artikel1"
                    android:scaleType="fitCenter"
                    android:id="@+id/iv4"
                    />

                <TextView
                    android:id="@+id/title4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantai Baloiyah, Selayar ...."
                    android:textSize="9sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv4"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kabarrantau.com"
                    android:textSize="7sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/title4"
                    android:layout_marginTop="2dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>